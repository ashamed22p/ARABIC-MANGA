modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["bzip2", "cabextract", "diffutils", "file", "freetype", "glibcLocales", "gnugrep", "gnutar", "gzip", "hdf5", "lcms2", "libGL", "libGLU", "libarchive", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "lzip", "openjpeg", "openssl", "p7zip", "pkg-config", "poppler_utils", "postgresql", "tcl", "tk", "unrar", "xz", "zip", "zlib", "zpaq"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
